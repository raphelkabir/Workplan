                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="BackgroundLayout" 
                              Grid.ColumnSpan="2" 
                              CornerRadius="4"
                              BorderThickness="{ThemeResource BackgroundLayoutThickness}"
                              BorderBrush="{ThemeResource ProjectsViewItemAccentColour}"
                              Opacity="0">
                            <Grid.Background>
                                <SolidColorBrush Color="{ThemeResource ProjectsViewItemAccentColour}"
                                                 Opacity="0.05"/>
                            </Grid.Background>
                        </Grid>

                        <Ellipse x:Name="Icon"
                                 Width="16"
                                 Height="16"
                                 StrokeThickness="2"
                                 Stroke="{ThemeResource ProjectsViewItemAccentColour}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Margin="12,0,0,0"/>

                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          Content="{TemplateBinding Content}"
                                          ContentTransitions="{TemplateBinding ContentTransitions}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Foreground="{TemplateBinding Foreground}"
                                          Margin="8,8,8,8"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          AutomationProperties.AccessibilityView="Raw"
                                          TextWrapping="Wrap" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>